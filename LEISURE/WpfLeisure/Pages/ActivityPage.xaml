<Page x:Class="WpfLeisure.Pages.ActivityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLeisure.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="810" d:DesignWidth="1440"
      Title="ActivityPage">

    <Grid Background="White">
        <StackPanel Width="300"
                    Height="550"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,270"
                    Background="White">

            <TextBlock Text="Название:"
                       FontSize="20"
                       Margin="0,10,0,10"
                       Width="100"
                       HorizontalAlignment="Left"/>

            <TextBox x:Name="TBName"
                     Width="300"
                     Height="30"
                     FontSize="20"
                     Margin="0,0,0,10"
                     HorizontalAlignment="Left"/>



            <TextBlock Text="Цена:"
                       FontSize="20"
                       Margin="0,0,0,10"
                       Width="195"
                       HorizontalAlignment="Left"/>

            <TextBox x:Name="TBPrice"
                     Width="300"
                     Height="30"
                     Margin="0,0,0,10"
                     FontSize="20"
                     HorizontalAlignment="Left"/>

            <TextBlock Text="Тип:"
                       FontSize="20"
                       Margin="0,0,0,10"
                       Width="100"
                       HorizontalAlignment="Left"/>

            <ComboBox  SelectedItem="{Binding Activity_Type}" 
                      DisplayMemberPath="Name" 
                      x:Name="CBType"
                      Height="25"
                      Width="200"
                  HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                  Grid.Column="1"
                  Grid.Row="3"/>

            <TextBox x:Name="TBType"
                     Width="300"
                     Height="30"
                     Margin="0,-25,0,10"
                     FontSize="20"
                     HorizontalAlignment="Left"/>



            <TextBlock Text="Дата начала:"
                       FontSize="20"
                       Margin="0,0,0,10"
                       Width="130"
                       HorizontalAlignment="Left"/>

            <DatePicker x:Name="DPStart" />

            <TextBlock Text="Дата конца:"
                       FontSize="20"
                       Margin="0,0,0,10"
                       Width="130"
                       HorizontalAlignment="Left"/>

            <DatePicker x:Name="DPEnd" />

            <TextBlock Text="Посещений:"
                       x:Name="TblVisits"
                       FontSize="20"
                       Margin="0,0,0,10"
                       Width="130"
                       HorizontalAlignment="Left"/>

            <TextBox x:Name="TBVisits"
                     Width="300"
                     Height="30"
                     IsReadOnly="True"
                     Margin="0,0,0,10"
                     FontSize="20"
                     HorizontalAlignment="Left"/>



            <Button x:Name="BtnAddActivity"
                    Click="BtnAddActivity_Click"
                    Content="Подать заявку"
                    Margin="10,-20,0,10"
                    HorizontalAlignment="Center"/>

            <Button x:Name="BtnAcceptRequest"
                    Click="BtnAcceptRequest_Click"
                    Content="Принять заявку"
                    Margin="10,-20,0,10"
                    HorizontalAlignment="Left"/>

            <Button x:Name="BtnDeclineRequest"
                    Click="BtnDeclinerequest_Click"
                    Content="Отклонить заявку"
                    Margin="10,-40,10,10"
                    HorizontalAlignment="Right"/>


        </StackPanel>


        <Image Source="{Binding Photo}" 
                   Width="500"
               HorizontalAlignment="Left"
                   Height="300"
               Margin="355,27,0,483"
               x:Name="ActivityPhoto"/>

        <Button x:Name="BtnAddPhoto" 
                Click="BtnAddPhoto_Click"
                Content="Добавить фото"
                Width="180"
                Height="100"
                FontSize="20"
                VerticalAlignment="Bottom"
                Margin="28,0,1212,57"/>

        <Button x:Name="BtnVisit" 
                Click="BtnVisit_Click"
                Content="Я пойду!"
                Width="200"
                FontSize="20"
                Height="100"
                VerticalAlignment="Bottom"
                Margin="355,0,885,57"/>

        <TextBox x:Name="TBDescription"
                 Width="400" 
                 Margin="810,-47,190,383"
                 TextWrapping="Wrap"
                 Grid.ColumnSpan="2"
                 Height="250"/>


        <TextBlock Text="Описание:"
                       FontSize="20"
                       Height="30"        
                       Margin="885,20,0,760"
                       Width="100"
                       HorizontalAlignment="Left"/>
    </Grid>
</Page>
